<h2>Authors</h2>
<ul>
{{#each model as |author|}}
  <li>{{author.name}}{{if author.hasPublishedRecentlyPromise.content '*'}}</li>
  <ul>
    {{#each author.books as |book|}}
      <li>
        {{book.title}} ({{book.year}})
        {{#unless book.isAvailablePromise.isPending}}
          - {{if book.isAvailablePromise.content 'available' 'on loan'}}
        {{/unless}}
      </li>
    {{/each}}
  </ul>
{{/each}}
</ul>
<p><em>* Published Recently</em></p>
